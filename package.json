{
    "name": "@ackee/redux-utils",
    "version": "3.0.0",
    "description": "Common Redux utilities - reducer factories, utility for generating action types.",
    "main": "lib/index.js",
    "module": "es/index.js",
    "sideEffects": false,
    "scripts": {
        "build:lib": "BABEL_ENV=lib babel src --out-dir lib --extensions \".ts\" --source-maps inline",
        "build:es": "BABEL_ENV=es babel src --out-dir es --extensions \".ts\" --source-maps inline",
        "build:js": "yarn build:es && yarn build:lib",
        "build:types": "tsc --project tsconfig.types.json --emitDeclarationOnly",
        "clean": "rm -rf lib es",
        "build": "yarn clean && yarn build:js && yarn build:types",
        "prepare": "yarn build",
        "lint": "tslint \"src/**/*.ts\"",
        "test": "BABEL_ENV=test jest",
        "push": "yarn build && yalc push",
        "type-check": "tsc --noEmit",
        "type-check:watch": "yarn type-check -- --watch",
        "start": "yarn build && onchange 'src/**/*.ts' -- yarn rebuild",
        "rebuild": "yarn clean && yarn build:es && yalc push",
        "changelog": "gitmoji-changelog",
        "version": "yarn changelog && code --wait CHANGELOG.md && git add CHANGELOG.md",
        "release": "yarn version",
        "prettier": "prettier --config ./prettier.config.ts --write './src/**/*.ts'",
        "size": "package-size ./es --no-cache"
    },
    "author": "Jiří Čermák <jiri.cermak@ackee.cz>",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/AckeeCZ/redux-utils"
    },
    "dependencies": {
        "@ackee/eslint-config": "^2.5.0",
        "@babel/runtime": "7.10.2",
        "@reduxjs/toolkit": "^1.5.1",
        "@types/jest": "^26.0.20",
        "@types/node": "^14.14.10"
    },
    "peerDependencies": {
        "reselect": "4.x"
    },
    "devDependencies": {
        "@ackee/browserslist-config": "^1.0.1",
        "@babel/cli": "7.10.1",
        "@babel/core": "7.10.2",
        "@babel/plugin-proposal-class-properties": "^7.8.3",
        "@babel/plugin-proposal-nullish-coalescing-operator": "^7.8.3",
        "@babel/plugin-proposal-object-rest-spread": "7.10.1",
        "@babel/plugin-transform-runtime": "7.10.1",
        "@babel/preset-env": "7.10.2",
        "@babel/preset-modules": "0.x",
        "@babel/preset-typescript": "^7.9.0",
        "babel-core": "^7.0.0-bridge.0",
        "babel-eslint": "10.x",
        "babel-jest": "26.0.1",
        "babel-plugin-custom-import-path-transform": "1.x",
        "babel-plugin-module-resolver": "4.0.0",
        "babel-preset-react-app": "^9.1.2",
        "cross-env": "7.0.2",
        "eslint": "7.2.0",
        "eslint-config-ackee": "0.x",
        "eslint-config-prettier": "6.11.0",
        "eslint-import-resolver-webpack": "0.x",
        "eslint-plugin-import": "2.20.2",
        "eslint-plugin-jest": "23.13.2",
        "gitmoji-changelog": "2.x",
        "husky": "4.2.5",
        "jest": "26.0.1",
        "lint-staged": "10.2.9",
        "onchange": "7.0.2",
        "package-size": "2.x",
        "prettier": "2.0.5",
        "prettier-config-ackee": "0.x",
        "reselect": "4.x",
        "ts-jest": "25.x",
        "tslint-config-ackee": "^0.3.0",
        "tslint-config-prettier": "1.x",
        "typescript": "3.x"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "pre-push": "yarn test && yarn lint"
        }
    },
    "lint-staged": {
        "src/*.{ts,json,md}": [
            "prettier --config ./prettier.config.js --write"
        ],
        "src/*.{ts}": [
            "yarn lint"
        ]
    },
    "publishConfig": {
        "access": "public"
    },
    "browserslist": [
        "extends @ackee/browserslist-config"
    ]
}
